import java.io.*;
import java.util.*;

public class Solution {
    public static void main(String args[]) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        
        int n = Integer.parseInt(br.readLine().trim()); // array size
        String nq[] = br.readLine().split(" ");
        int q = Integer.parseInt(nq[0]); // number of queries
        int kFixed = Integer.parseInt(nq[1]); // divisor for type-2 queries
        
        int arr[] = new int[n]; // default all 0
        
        StringBuilder out = new StringBuilder();
        
        for(int i=0; i<q; i++){
            String parts[] = br.readLine().split(" ");
            int type = Integer.parseInt(parts[0]);
            
            if(type == 1){
                int idx = Integer.parseInt(parts[1]);
                int val = Integer.parseInt(parts[2]);
                arr[idx] = val;
            }
            else if(type == 2){
                int l = Integer.parseInt(parts[1]);
                int r = Integer.parseInt(parts[2]);
                int cnt = 0;
                for(int j = l; j <= r; j++){
                    if(arr[j] % kFixed == 0){
                        cnt++;
                    }
                }
                out.append(cnt).append("\n");
            }
        }
        System.out.print(out.toString());
    }
}
